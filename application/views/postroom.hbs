<form action="/post/createPost" method="POST" enctype="multipart/form-data">
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    class="title hover_card"
    placeholder="Enter an title."
    required
  />
  <label for="address">Address</label>
  <input
    type="text"
    name="address"
    id="address"
    class="address hover_card"
    placeholder="Enter an address."
    required
  />
  <label for="rent">Rent</label>
  <input
    type="text"
    name="rent"
    id="rent"
    class="rent hover_card"
    placeholder="Enter an rent."
    required
  />
  <label for="privacy">Privacy (Shared or Private)
    <input
      type="checkbox"
      name="privacy"
      id="privacy"
      class="privacy hover_card hover_input"
      placeholder="Enter an privacy."
    />
  </label>

  <label for="description">Description</label>
  <textarea
    type="text"
    name="description"
    id="description"
    class="description hover_card"
    placeholder="Enter an description."
    required
  ></textarea>

  <label for="avatar">Choose a picture:</label>
  <input
    type="file"
    name="fileUpload"
    id="fileUpload"
    value="fileUpload"
    class="card p-5"
    required
  />

  <button type="submit" id="submit" class="hover_card">Submit</button>
</form>