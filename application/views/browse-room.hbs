<div class="relative min-h-screen md:flex">

    {{!-- filters panel --}}
    <div class="filter_panel" class="w-4/6">
        <div class="search ">
            {{!-- placeholder for search --}}
            <input type="text" id="search-text" placeholder="search" class="w-11/12"></input>
            <button id="search-button">
                <img src="/images/search_icon.png" width="20px">
            </button>
        </div>

        <form action="post/filter" action="GET" class="filter_form w-56">

            {{!-- room preferences --}}
            <div class="search_category">
                <label for="price">Price Range: </label>
                <div class="range">
                    <input  id="minRange" type="text" name="minPriceRange" placeholder="Min Price" class="w-5/12 mx-3">-
                    <input  id="maxRange" type="text" name="maxPriceRange" placeholder="Max Price" class="w-5/12 mx-3">
                </div>
            </div>

            <div class="search_category">
                <label for="privacy">Privacy:</label>
                <div class="filter_category">
                    <div class="item">
                        <input type="radio" name="privacy" id="privateroom" class="filter_option" value="private" />Private Room
                    </div>
                    <div class="item">
                        <input type="radio" name="privacy" id="sharedroom" class="filter_option" value="shared" />Shared Room
                    </div>
                </div>
            </div>

            <div class="search_category">
                <label for="amenities"> Amenities </label>
                <div class="filter_category">
                    <div class="item">
                        <input id="parking" type="checkbox" name="parking" value="parking">Parking
                        <input id="disability" type="checkbox" name="disability" value="disability">Disability
                    </div>
                </div>
            </div>
            <button type="submit" class="filterButton">Filter</button>
        </form>
    </div>

    {{!-- generate all the necessary cards --}}
    <div class="cardGrid grid md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-2 2xl:grid-cols-3" id="room_results">
        {{#each results}}
        {{> roomcard this}}
        {{/each}}
    </div>

    {{!-- placeholder for map. not: map can't use classes --}}
    {{!-- <div id="map" class=".w-screen md:w-1/3"> </div> --}}
    <div id="map"> </div>

</div>


